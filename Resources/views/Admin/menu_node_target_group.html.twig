<div class="tab-pane {% if loop.first %} active{% endif %}" id="{{ admin.uniqid }}_{{ loop.index }}">
    <fieldset>
        <div class="sonata-ba-collapsed-fields">
            {% if form_group.description != false %}
            <p>{{ form_group.description|raw }}</p>
            {% endif %}

            {{ form_row(form.linkType) }}

            <div id="cmf_menu_content" class="cmf_menu_target_field">
                {{ form_row(form.content) }}
                {{ form_row(form.weak) }}
            </div>

            <div id="cmf_menu_uri" class="cmf_menu_target_field">
                {{ form_row(form.uri) }}
            </div>

            <div id="cmf_menu_route" class="cmf_menu_target_field">
                {{ form_row(form.route) }}
                {{ form_row(form.routeParameters) }}
            </div>
        </div>

        <script type="text/javascript">
$(document).ready(function () {

    $('#{{ form.vars.name }}_{{ form.linkType.vars.name }}').bind('change', function () {
        hideFunc = function (name) {
            $('#cmf_menu_' + name).hide();
        }
        showFunc = function (name) {
            $('#cmf_menu_' + name).show();
        }

        hideFunc('content');
        hideFunc('uri');
        hideFunc('route');
        showFunc($(this).val());
    });
});
        </script>
    </fieldset>
</div>

